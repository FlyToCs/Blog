@page "/Posts/{userId:int?}"

@using Blog.Presentation.RazorPages.Services.FileManager
@model PostsModel
@{
    ViewData["Title"] = "Home page";
}

<main class="main-row d-inline-block mb-2 mt-4">
    <div class="container-main">
        <div class="d-block">

            <div class="col-lg-9 col-md-8 col-xs-12 pr mt-3">
                <section class="content-widget">

                    @foreach (var item in Model.Posts)
                    {
                        <article class="post-item">
                            <div class="post-thumb">
                                <a href="#" class="d-block">
                                    <img src="@Directories.GetPostImage(item.Img)"
                                         alt="@item.Title">
                                </a>
                            </div>
                            <div class="post-content">
                                <div class="title">
                                    <a href="#">
                                        <h2 class="title-tag">
                                            @item.Title
                                        </h2>
                                    </a>
                                </div>
                                <div class="excerpt">
                                    @item.Description
                                </div>
                                <span class="post-date">
                                    <i class="fa fa-calendar"></i>
                                    @item.CreatedAt
                                </span>
                            </div>
                        </article>
                    }
                </section>
            </div>
            <div class="col-lg-3 col-md-4 col-xs-12 pr mt-3 sticky-sidebar">
                <div class="shortcode-widget-area-sidebar">
                    <section class="widget-categories">
                        <div class="header-sidebar mb-3">
                            <h3>لیست دسته بندی ها</h3>
                        </div>
                        <div class="content-sidebar">
                            @if (Model.Categories != null! && Model.Categories.Any())
                            {
                                <ul class="list-group list-group-flush p-0" style="list-style: none;">
                                    @foreach (var category in Model.Categories)
                                    {
                                        <li class="list-group-item pr-0 pl-0 border-0 mb-2">
                                            <div class="title">
                                                <a href="/Category/@category.Slug" class="d-block text-secondary">
                                                    <i class="fa fa-angle-left ml-2"></i>
                                                    <h4 class="d-inline-block title-tag" style="font-size: 14px;">
                                                        @category.Title
                                                    </h4>
                                                </a>
                                            </div>
                                        </li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <div class="alert alert-light text-center">
                                    دسته بندی یافت نشد.
                                </div>
                            }
                        </div>
                    </section>
                </div>
            </div>
            <div class="pagination-product pr-3 pl-3 pr">
                <nav aria-label="Page navigation example">
                    <ul class="pagination">
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Previous">
                                <span aria-hidden="true">«</span>
                            </a>
                        </li>
                        <li class="page-item">
                            <a class="page-link active" href="#">1</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">2</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">3</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">...</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">8</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Next">
                                <span aria-hidden="true">»</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</main>
